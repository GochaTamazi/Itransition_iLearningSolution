@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewBag.Title = _localizer["User Reviews"];
    Layout = "_Layout";
    var id = (int) ViewData["id"]!;
}

<h2 class="ReviewsTitle">@_localizer["User Reviews"]</h2>
<hr/>
<div id="UserReviews"></div>

<script>
window.onload = () => {
    let id = '@id'
    let url = `/Review/GetReviewsByAuthor?id=${id}`
    GetReview(url, 'UserReviews')
}
</script>